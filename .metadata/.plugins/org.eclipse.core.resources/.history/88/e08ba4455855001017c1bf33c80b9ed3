package com.flow.coretime.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class LoginController {
	@GetMapping("/login")
	public String login() {
		return "login"; // login.jsp 반환
	}

	@GetMapping("/home")
	public String home() {
		return "home"; // 로그인 성공 후 이동할 페이지
	}
	
	@GetMapping("/")
	public String homeRoot() { // / 경로 처리 (선택적)
		// 예를 들어, 로그인 전 홈페이지나 간단한 소개 페이지
		return "index"; // index.jsp (필요하다면 생성)
	}
}
