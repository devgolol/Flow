<mapper namespace="com.flow.coretime.mapper.UserMapper">

<select id="findById" resultType="com.flow.coretime.model.User">
        SELECT ID, USERNAME, PASSWORD, ROLES
        FROM USERS
        WHERE ID = #{id}
    </select>
	<insert id="insertUser" parameterType="com.flow.coretime.model.User">
        INSERT INTO USERS (NAME, ID, PASSWORD, EMAIL, TEL, RANK, DEPARTMENT, BIRTH, UPDATEDAT, CREATEDAT, ROLES)
        VALUES (#{name}, #{id}, #{password}, #{email}, #{tel} #{rank}, #{department}, #{birth}, #{updatedAt}, #{createdAt}, ${roles})
    </insert>

   
