<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.flow.coretime.mapper.UserMapper">

	<select id="findById" resultType="com.flow.coretime.model.User">
        SELECT ID, PASSWORD, ROLE
        FROM USERS
        WHERE ID = #{id}
    </select>
	<insert id="insertUser" parameterType="com.flow.coretime.model.User">
        INSERT INTO USERS (NAME, ID, PASSWORD, EMAIL, TEL, RANK, DEPARTMENT, BIRTH, UPDATEDAT, CREATEDAT, ROLE)
        VALUES (#{name}, #{id}, #{password}, #{email}, #{tel}, #{rank}, #{department}, #{birth}, #{updatedAt}, #{createdAt}, #{role})
    </insert>
    
    <select id="findAllUsers" resultType="com.flow.coretime.model.User">
        SELECT
            NAME, ID, PASSWORD, EMAIL, TEL, RANK, DEPARTMENT, BIRTH, UPDATEDAT, CREATEDAT, ROLE AS ROLE
        FROM USERS
        ORDER BY CREATEDAT DESC -- 최신 등록 사용자부터 보이도록 정렬
    </select>
</mapper>